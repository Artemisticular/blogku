import MainGridLayout from "../layouts/MainGridLayout.astro";
import { navBarConfig } from "../config";
import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";
import { formatDateToYYYYMMDD } from "../utils/date-utils";

const { videoPage } = navBarConfig;

if (!videoPage?.enable) {
    return Astro.redirect("/404");
}

// Check if access code is provided and valid
const accessCode = Astro.url.searchParams.get("code");
const isValidCode = accessCode === videoPage.accessCode;

// Get all videos
const videos = await getCollection("videos");

// If no valid code, show access form
if (!isValidCode) {
    return (
        <MainGridLayout title={videoPage.title} description={videoPage.description}>
            <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative">
                <div class="card-base z-10 px-9 py-8 relative w-full">
                    <div class="text-center mb-8">
                        <Icon name="material-symbols:lock-outline" class="text-5xl text-[var(--primary)] mx-auto mb-4" />
                        <h1 class="text-2xl font-bold mb-2">{videoPage.title}</h1>
                        <p class="text-neutral-600 dark:text-neutral-400">{videoPage.description}</p>
                    </div>
                    
                    <form class="max-w-md mx-auto" method="GET">
                        <div class="mb-4">
                            <label for="code" class="block text-sm font-medium mb-2">Masukkan Kode Akses</label>
                            <input 
                                type="password" 
                                id="code" 
                                name="code" 
                                required
                                class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-700 
                                       bg-white dark:bg-neutral-800 
                                       focus:outline-none focus:ring-2 focus:ring-[var(--primary)]"
                                placeholder="Kode akses..."
                            />
                        </div>
                        <button 
                            type="submit"
                            class="w-full btn-regular rounded-lg py-2 font-medium"
                        >
                            Masuk
                        </button>
                    </form>
                </div>
            </div>
        </MainGridLayout>
    );
}

// Sort videos by published date
const sortedVideos = videos.sort((a, b) => b.data.published.getTime() - a.data.published.getTime());

<MainGridLayout title={videoPage.title} description={videoPage.description}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative">
        <div class="card-base z-10 px-9 py-8 relative w-full">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold">{videoPage.title}</h1>
                <a href="/video" class="btn-regular rounded-lg px-4 py-2 text-sm">
                    <Icon name="material-symbols:logout" class="mr-2" />
                    Keluar
                </a>
            </div>

            <!-- Video Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {sortedVideos.map((video) => (
                    <div class="card-base overflow-hidden hover:scale-[1.02] transition-transform">
                        <div class="aspect-video bg-neutral-200 dark:bg-neutral-800 relative">
                            {video.data.thumbnail ? (
                                <img 
                                    src={video.data.thumbnail} 
                                    alt={video.data.title}
                                    class="w-full h-full object-cover"
                                />
                            ) : (
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <Icon name="material-symbols:play-circle-outline" class="text-5xl text-neutral-400" />
                                </div>
                            )}
                        </div>
                        <div class="p-4">
                            <h3 class="font-bold mb-2">{video.data.title}</h3>
                            <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-2">
                                {video.data.description}
                            </p>
                            <div class="flex items-center text-xs text-neutral-500 dark:text-neutral-400">
                                <Icon name="material-symbols:calendar-today" class="mr-1" />
                                {formatDateToYYYYMMDD(video.data.published)}
                            </div>
                            {video.data.tags && (
                                <div class="flex flex-wrap gap-2 mt-3">
                                    {video.data.tags.map((tag) => (
                                        <span class="text-xs px-2 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            )}
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</MainGridLayout>

